<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Link name</th>
      <th>Comment</th>
      <th>User</th>
      <th>Genre</th>
      <th>Private flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.url %></td>
        <td><%= link.link_name %></td>
        <td><%= link.comment %></td>
        <td><%= link.user.name %></td>
        <td><%= link.genre_id %></td>
        <td><%= link.private_flag %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Link', new_link_path %>
